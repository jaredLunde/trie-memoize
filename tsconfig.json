{
  "include": ["src"],
  "exclude": ["**/*.test.js", "**/test.js"],
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "typeRoots": [
      "./src/types/*",
      "./node_modules/@types/*",
      "./node_modules/*"
    ]
  }
}